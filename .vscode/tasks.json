{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Switch",
            "type": "process",
            "command": "pkexec",
            "args": [
                "--keep-cwd",
                "--disable-internal-agent",
                "nixos-rebuild",
                "switch",
                "--impure",
                "--flake",
                ".#Duanin2Laptop"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "process",
            "command": "pkexec",
            "args": [
                "--keep-cwd",
                "--disable-internal-agent",
                "nixos-rebuild",
                "test",
                "--impure",
                "--flake",
                ".#Duanin2Laptop"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Build",
            "type": "process",
            "command": "pkexec",
            "args": [
                "--keep-cwd",
                "--disable-internal-agent",
                "nixos-rebuild",
                "build",
                "--impure",
                "--flake",
                ".#Duanin2Laptop"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Boot",
            "type": "process",
            "command": "pkexec",
            "args": [
                "--keep-cwd",
                "--disable-internal-agent",
                "nixos-rebuild",
                "boot",
                "--impure",
                "--flake",
                ".#Duanin2Laptop"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Update",
            "type": "process",
            "command": "nix",
            "args": [
                "flake",
                "update",
                "."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}